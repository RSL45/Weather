<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_slide"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="#ff565b"
            android:gravity="center"
            android:text="删 除"
            android:textColor="#ffffff"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/bodyLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:background="@drawable/bg_city_rain"
            android:tag="slide_flag">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/addressNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="广州市"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/locateIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/addressNameTv"
                        android:src="@drawable/ic_address"
                        android:layout_marginStart="2dp"
                        android:visibility="gone"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/descriptionTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addressNameTv"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="#fff"
                    tools:text="空气优 33°/26°"/>

            </LinearLayout>

            <TextView
                android:id="@+id/temperatureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                tools:text="27°"
                android:textStyle=""
                android:textColor="#fff"
                android:textSize="30sp"/>

        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>